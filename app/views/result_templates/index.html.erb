<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All results
    </h1>

    <a href="/results/new" class="btn btn-block btn-outline-secondary">
      Add a new result
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Submission
        </th>

        <th>
          Flags
        </th>

        <th>
          Confidence
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @results.each do |result| %>
      <tr>
        <!-- Display result.id start -->
        <td>
          <%= result.id %>
        </td>
        <!-- Display result.id end -->

        <!-- Display result.submission_id start -->
        <td>
          <%= result.submission_id %>
        </td>
        <!-- Display result.submission_id end -->

        <!-- Display result.flags start -->
        <td>
          <%= result.flags %>
        </td>
        <!-- Display result.flags end -->

        <!-- Display result.confidence start -->
        <td>
          <%= result.confidence %>
        </td>
        <!-- Display result.confidence end -->

        <!-- Display result.created_at start -->
        <td>
          <%= time_ago_in_words(result.created_at) %> ago
        </td>
        <!-- Display result.created_at end -->

        <!-- Display result.updated_at start -->
        <td>
          <%= time_ago_in_words(result.updated_at) %> ago
        </td>
        <!-- Display result.updated_at end -->

        <td>
          <a href="/results/<%= result.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
