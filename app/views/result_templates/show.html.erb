<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Result #<%= @result.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/results" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/results/<%= @result.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit result
        </a>
      </div>

      <div class="col">
        <a href="/delete_result/<%= @result.id %>" class="btn btn-block btn-outline-secondary">
          Delete result
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Submission
      </dt>
      <dd>
        <% if @result.submission.present? %>
          <a href="/submissions/<%= @result.submission_id %>">
            <%= @result.submission.text %>
          </a>
        <% end %>
      </dd>

      <dt>
        Flags
      </dt>
      <dd>
        <%= @result.flags %>
      </dd>

      <dt>
        Confidence
      </dt>
      <dd>
        <%= @result.confidence %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@result.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@result.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

