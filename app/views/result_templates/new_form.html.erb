<h1>
  Add a new result
</h1>


<hr>

<form action="/create_result" method="post">

  <div class="form-group">
    <label for="submission_id">
      Submission
    </label>

    <%= select_tag(:submission_id, options_from_collection_for_select(Submission.all, :id, :text, @result.submission_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="flags">
      Flags
    </label>

    <input type="text" id="flags" name="flags" class="form-control">
  </div>

  <div class="form-group">
    <label for="confidence">
      Confidence
    </label>

    <input type="text" id="confidence" name="confidence" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create result
  </button>
</form>

<hr>

<a href="/results">
  Go back
</a>
