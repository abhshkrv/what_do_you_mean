<!-- Validation failure messages -->
<% if @submission.errors.any? %>
  <% @submission.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit submission #<%= @submission.id %>
</h1>

<hr>

<!-- Form submission start -->
<form action="/update_submission/<%= @submission.id %>" method="post">
<!-- Form submission end -->

  <!-- Label and input for text start -->
  <div class="form-group">
    <label for="text">
      Text
    </label>

    <!-- Input for text start -->
    <input type="text" id="text" name="text" class="form-control" value="<%= @submission.text %>">
    <!-- Input for text end -->
  </div>
  <!-- Label and input for text end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @submission.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update submission
  </button>
</form>

<hr>

<a href="/submissions">
  Go back
</a>
