<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All submissions
    </h1>

    <a href="/submissions/new" class="btn btn-block btn-outline-secondary">
      Add a new submission
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "submission_templates/submissions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Text
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @submissions.each do |submission| %>
      <tr>
        <td>
          <%= submission.id %>
        </td>

        <td>
          <%= submission.text %>
        </td>

        <td>
          <% if submission.user.present? %>
            <a href="/users/<%= submission.user.id %>">
              <%= submission.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(submission.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(submission.updated_at) %> ago
        </td>

        <td>
          <a href="/submissions/<%= submission.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @submissions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
