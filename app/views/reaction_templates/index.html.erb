<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All reactions
    </h1>

    <a href="/reactions/new" class="btn btn-block btn-outline-secondary">
      Add a new reaction
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "reaction_templates/reactions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Reaction
        </th>

        <th>
          User
        </th>

        <th>
          Submission
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @reactions.each do |reaction| %>
      <tr>
        <td>
          <%= reaction.id %>
        </td>

        <td>
          <%= reaction.reaction %>
        </td>

        <td>
          <% if reaction.user.present? %>
            <a href="/users/<%= reaction.user.id %>">
              <%= reaction.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if reaction.submission.present? %>
            <a href="/submissions/<%= reaction.submission.id %>">
              <%= reaction.submission.text %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(reaction.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(reaction.updated_at) %> ago
        </td>

        <td>
          <a href="/reactions/<%= reaction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @reactions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
