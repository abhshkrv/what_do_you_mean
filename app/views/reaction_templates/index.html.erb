<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All reactions
    </h1>

    <a href="/reactions/new" class="btn btn-block btn-outline-secondary">
      Add a new reaction
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Reaction
        </th>

        <th>
          User
        </th>

        <th>
          Submission
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @reactions.each do |reaction| %>
      <tr>
        <!-- Display reaction.id start -->
        <td>
          <%= reaction.id %>
        </td>
        <!-- Display reaction.id end -->

        <!-- Display reaction.reaction start -->
        <td>
          <%= reaction.reaction %>
        </td>
        <!-- Display reaction.reaction end -->

        <!-- Display reaction.user_id start -->
        <td>
          <%= reaction.user_id %>
        </td>
        <!-- Display reaction.user_id end -->

        <!-- Display reaction.submission_id start -->
        <td>
          <%= reaction.submission_id %>
        </td>
        <!-- Display reaction.submission_id end -->

        <!-- Display reaction.created_at start -->
        <td>
          <%= time_ago_in_words(reaction.created_at) %> ago
        </td>
        <!-- Display reaction.created_at end -->

        <!-- Display reaction.updated_at start -->
        <td>
          <%= time_ago_in_words(reaction.updated_at) %> ago
        </td>
        <!-- Display reaction.updated_at end -->

        <td>
          <a href="/reactions/<%= reaction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
