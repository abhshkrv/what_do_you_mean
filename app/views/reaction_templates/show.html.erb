<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Reaction #<%= @reaction.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/reactions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/reactions/<%= @reaction.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit reaction
        </a>
      </div>

      <div class="col">
        <a href="/delete_reaction/<%= @reaction.id %>" class="btn btn-block btn-outline-secondary">
          Delete reaction
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Reaction
      </dt>
      <dd>
        <%= @reaction.reaction %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @reaction.user.present? %>
          <a href="/users/<%= @reaction.user_id %>">
            <%= @reaction.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Submission
      </dt>
      <dd>
        <% if @reaction.submission.present? %>
          <a href="/submissions/<%= @reaction.submission_id %>">
            <%= @reaction.submission.text %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@reaction.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@reaction.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

