<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Reaction #<%= @reaction.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/reactions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link reaction start -->
      <div class="col">
        <a href="/reactions/<%= @reaction.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit reaction
        </a>
      </div>
      <!-- Edit link reaction end -->

      <!-- Delete link reaction start -->
      <div class="col">
        <a href="/delete_reaction/<%= @reaction.id %>" class="btn btn-block btn-outline-secondary">
          Delete reaction
        </a>
      </div>
      <!-- Delete link reaction end -->
    </div>

    <dl>
      <dt>
        Reaction
      </dt>
      <!-- Display reaction start -->
      <dd>
        <%= @reaction.reaction %>
      </dd>
      <!-- Display reaction end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @reaction.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Submission
      </dt>
      <!-- Display submission_id start -->
      <dd>
        <%= @reaction.submission_id %>
      </dd>
      <!-- Display submission_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@reaction.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@reaction.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

